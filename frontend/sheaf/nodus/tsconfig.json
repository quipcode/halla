{
    "compilerOptions": {
        "target": "ES2019",
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "outDir": "../../dist/server",
        "lib": [
            "ES2019"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "incremental": true,
        "composite": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.test.ts"
    ],
